diff --git a/Config.vcxproj b/Config.vcxproj
index d1c66a7..225a54e 100644
--- a/Config.vcxproj
+++ b/Config.vcxproj
@@ -38,7 +38,7 @@
       <MultiProcessorCompilation>true</MultiProcessorCompilation>
       
       <!-- default -->
-      <RuntimeLibrary>MultiThreaded</RuntimeLibrary>
+      <RuntimeLibrary>MultiThreadedDLL</RuntimeLibrary>
       
     </ClCompile>
   </ItemDefinitionGroup>
diff --git a/source/defines.h b/source/defines.h
index ad63620..53fea86 100644
--- a/source/defines.h
+++ b/source/defines.h
@@ -55,7 +55,7 @@ GNU General Public License for more details.
 #define WINDOW_CLASS_GUI _T("AutoHotkeyGUI") // There's a section in Script::Edit() that relies on these all starting with "AutoHotkey".
 
 #define EXT_AUTOHOTKEY _T(".ahk")
-#define AHK_HELP_FILE _T("AutoHotkey.chm")
+#define AHK_HELP_FILE _T("..\\etc\\AutoHotkey.chm")
 
 // AutoIt2 supports lines up to 16384 characters long, and we want to be able to do so too
 // so that really long lines from aut2 scripts, such as a chain of IF commands, can be
diff --git a/source/script2.cpp b/source/script2.cpp
index 0cdab2e..669107e 100644
--- a/source/script2.cpp
+++ b/source/script2.cpp
@@ -569,7 +569,7 @@ void LaunchAutoHotkeyUtil(LPTSTR aFile, bool aIsScript)
 
 void LaunchWindowSpy()
 {
-	LaunchAutoHotkeyUtil(_T("WindowSpy.ahk"), true);
+	LaunchAutoHotkeyUtil(_T("..\\etc\\WindowSpy.ahk"), true);
 }
 
 void LaunchAutoHotkeyHelp()
